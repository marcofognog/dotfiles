# custom config file.
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

exec_always ~/./startup-hook.sh

set $mod Mod4

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

bindsym $mod+Return exec urxvt # terminal
bindsym $mod+space exec dmenu_run

bindsym $mod+j workspace 1
bindsym $mod+k workspace 2
bindsym $mod+l workspace 3
bindsym $mod+n workspace 4
bindsym $mod+m workspace 5
bindsym $mod+comma workspace 6
bindsym $mod+period workspace 7
bindsym $mod+semicolon workspace 8

bindsym $mod+u focus left
bindsym $mod+i focus right
bindsym $mod+o layout stacking
bindsym $mod+p layout tabbed
bindsym $mod+y fullscreen
bindsym $mod+h exec i3lock --color=000000

# Launch programs
bindsym $mod+e exec emacs
bindsym $mod+t exec gnome-terminal
bindsym $mod+g exec google-chrome

bindsym $mod+Up focus up
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Right focus right

bindsym $mod+Shift+space floating toggle
bindsym $mod+Shift+C reload
bindsym $mod+Shift+E exit
bindsym $mod+Shift+P kill
bindsym $mod+Shift+R restart
bindsym $mod+Shift+S exec shutter -s # screenshot tool
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Shift+exclam move workspace 1; workspace 1
bindsym $mod+Shift+at move workspace 2; workspace 2
bindsym $mod+Shift+numbersign move workspace 3; workspace 3
bindsym $mod+Shift+dollar move workspace 4; workspace 4
bindsym $mod+Shift+percent move workspace 5; workspace 5
bindsym $mod+Shift+dead_diaeresis move workspace 6; workspace 6
bindsym $mod+Shift+ampersand move workspace 7;workspace 7
bindsym $mod+Shift+asterisk move workspace 8; workspace 8

focus_follows_mouse no
workspace_layout tabbed
